<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingStart="15dp"
    android:paddingEnd="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:background="@drawable/bg_their_message"
        android:elevation="2dp"
        android:paddingVertical="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        tools:text="How are you doing? This is a long message that should probably wrap."
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivReaction"
        android:visibility="gone"
        android:src="@drawable/ic_love"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@id/messageTextView"
        app:layout_constraintStart_toStartOf="@id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>